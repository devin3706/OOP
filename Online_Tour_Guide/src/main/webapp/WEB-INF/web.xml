<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Online_Tour_Guide</display-name>
  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>
  
  <servlet>  
  	<servlet-name>addInfo</servlet-name>
  	<servlet-class>com.info.servlet.AddInformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addInfo</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>

  <servlet>  
  	<servlet-name>getInfo</servlet-name>
  	<servlet-class>com.info.servlet.GetInformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>getInfo</servlet-name>
  	<url-pattern>/get</url-pattern>
  </servlet-mapping>
  
   <servlet>  
  	<servlet-name>updateInfo</servlet-name>
  	<servlet-class>com.info.servlet.UpdateInformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>updateInfo</servlet-name>
  	<url-pattern>/update</url-pattern>
  </servlet-mapping>
  
   <servlet>  
  	<servlet-name>deleteInfo</servlet-name>
  	<servlet-class>com.info.servlet.DeleteInformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>deleteInfo</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
</web-app>
